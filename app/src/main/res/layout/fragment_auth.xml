<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".auth.ui.AuthActivity"
    >

    <ImageView
        android:transitionName="img_logo"
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="62dp"
        android:paddingEnd="62dp"
        app:layout_constraintBottom_toTopOf="@id/actionCreateWallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".5"
        app:srcCompat="@drawable/img_logo_main"
        />

    <Button
        android:id="@+id/actionCreateWallet"
        style="@style/Wallet.Button.White"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_edges"
        android:layout_marginEnd="@dimen/margin_edges"
        android:layout_marginBottom="@dimen/margin_edges"
        android:text="Create wallet"
        app:layout_constraintBottom_toTopOf="@id/actionAdvancedMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/actionAdvancedMode"
        style="@style/Wallet.Button.Blue.WhiteBorder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_edges"
        android:layout_marginTop="@dimen/margin_edges"
        android:layout_marginEnd="@dimen/margin_edges"
        android:layout_marginBottom="@dimen/margin_edges"
        android:text="Advanced mode"
        app:layout_constraintBottom_toTopOf="@id/actionSignin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/actionSignin"
        style="@style/Wallet.Button.Blue.WhiteBorder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_edges"
        android:layout_marginTop="@dimen/margin_edges"
        android:layout_marginBottom="32dp"
        android:text="Sign in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/actionHelp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/actionHelp"
        style="@style/Wallet.Button.Blue.WhiteBorder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_edges"
        android:layout_marginTop="@dimen/margin_edges"
        android:layout_marginEnd="@dimen/margin_edges_half"
        android:layout_marginBottom="32dp"
        android:text="Help"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/actionSignin"
        />


</android.support.constraint.ConstraintLayout>