<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_edges"
        android:layout_marginEnd="@dimen/margin_edges"
        android:background="@color/greyBackground"
        android:paddingStart="@dimen/margin_inset"
        android:paddingTop="@dimen/margin_edges"
        android:paddingEnd="@dimen/margin_inset"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/field.layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_edges"
            android:hint="Username"
            app:hintEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="0dp"
            android:theme="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/field.input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-3dp"
                android:layout_marginEnd="-3dp"
                android:imeOptions="actionDone"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/field.action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/field.layout"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_edges"
            app:layout_constraintTop_toBottomOf="@id/field.action"
            />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
