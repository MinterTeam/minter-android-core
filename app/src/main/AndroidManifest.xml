<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="network.minter.bipwallet">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name="network.minter.bipwallet.internal.Wallet"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Wallet"
        tools:ignore="GoogleAppIndexingWarning">

        <provider
            android:name=".internal.system.WalletFileProvider"
            android:authorities="${applicationId}.file.provider"
            android:exported="false"
            android:grantUriPermissions="true"
            >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"
                />
        </provider>

        <activity
            android:name="network.minter.bipwallet.auth.ui.AuthActivity"
            android:theme="@style/Wallet.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".advanced.ui.AdvancedMainActivity"
            android:launchMode="singleTop"
            />
        <activity
            android:name=".advanced.ui.AdvancedGenerateActivity"
            android:launchMode="singleTop"
            />

        <activity
            android:name="com.blikoon.qrcodescanner.QrCodeActivity"
            android:theme="@style/Wallet"
            />

        <activity
            android:name=".home.ui.HomeActivity"
            android:windowSoftInputMode="stateHidden"
            />
        <activity android:name=".auth.ui.RegisterActivity"/>
        <activity android:name=".auth.ui.SigninActivity"/>
        <activity android:name=".addresses.ui.AddressListActivity"/>
        <activity android:name=".addresses.ui.AddressItemActivity"/>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Wallet.CropImage"
            />
        <activity
            android:name=".sending.ui.DialogTxSendActivity"
            android:theme="@style/Wallet.DialogActivity"
            />
        <activity android:name=".tx.ui.TransactionListActivity"/>
        <activity
            android:name=".sending.ui.QRCodeScannerActivity"
            android:theme="@style/Wallet"
            />
        <activity
            android:name=".receiving.ui.QRPreviewActivity"
            android:theme="@style/Wallet"
            />
        <activity android:name=".exchange.ui.ConvertCoinActivity"/>
        <activity android:name=".settings.ui.PasswordChangeMigrationActivity"/>
    </application>

</manifest>