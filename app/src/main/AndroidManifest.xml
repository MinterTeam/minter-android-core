<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="network.minter.bipwallet">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="network.minter.bipwallet.internal.Wallet"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Wallet"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="network.minter.bipwallet.auth.ui.AuthActivity"
            android:theme="@style/Wallet.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".advanced.ui.AdvancedMainActivity"
            android:launchMode="singleTop"
            />
        <activity
            android:name=".advanced.ui.AdvancedGenerateActivity"
            android:launchMode="singleTop"
            />

        <activity android:name=".home.ui.HomeActivity"/>
        <activity android:name=".auth.ui.RegisterActivity"/>
        <activity android:name=".auth.ui.SigninActivity"/>
        <activity android:name=".addresses.ui.AddressListActivity"/>
        <activity android:name=".addresses.ui.AddressItemActivity"/>
        <activity
            android:name=".internal.dialogs.DialogSequenceActivity"
            android:theme="@style/Wallet.DialogActivity"
            />
    </application>

</manifest>